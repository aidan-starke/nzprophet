{
  "name": "prophet",
  "version": "0.1.0",
  "private": true,
  "engines" : { 
    "node" : "14.16.0"
   },
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "bootstrap": "^4.6.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.7",
    "npm-install-peers": "^1.2.2",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-scripts": "4.0.2",
    "redux": "^4.0.5"
  },
  "scripts": {
    "start": "run-p prod:client prod:server",
    "dev": "run-p dev:server dev:client",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint \"**/*.js\" \"**/*.jsx\"",
    "dev:server": "nodemon nzprophet-backend/server --ext js,jsx",
    "dev:client": "react-scripts build && serve -s build",
    "prod:client": "react-scripts build",
    "prod:server": "cd nzprophet-backend && npm start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.19.0",
    "npm-run-all": "^4.1.5"
  }
}
